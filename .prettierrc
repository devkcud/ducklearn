{
  "$schema": "https://json.schemastore.org/prettierrc",
  "useTabs": false,
  "tabWidth": 2,
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 100,
  "semi": true,
  "bracketSpacing": true,
  "plugins": ["prettier-plugin-svelte", "prettier-plugin-prisma"],
  "overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }]
}
